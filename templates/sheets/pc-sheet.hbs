                    <label>{{localize "kult4e.Weight"}}</label>
                    <p1 class="character-detail">
                        <input name="data.attributes.weight" type="text" value="{{data.attributes.weight}}" placeholder="{{localize "kult4e.Weight"}}">
                    </p1>
                </div>
                <div class="spec">
                    <label>{{localize "kult4e.Height"}}</label>
                    <p1 class="character-detail">
                        <input name="data.attributes.cm" type="text" value="{{data.attributes.cm}}" placeholder="{{localize "kult4e.Height"}}">
                    </p1>
                </div>
            </div>
            <div>
                <div class="spec">
                    <label>{{localize "kult4e.Eyes"}}</label>
                    <p1 class="character-detail">
                        <input name="data.attributes.eye" type="text" value="{{data.attributes.eye}}" placeholder="{{localize "kult4e.Eyes"}}">
                    </p1>
                </div>
                <div class="spec">
                    <label>{{localize "kult4e.Hair"}}</label>
                    <p1 class="character-detail">
                        <input name="data.attributes.hair" type="text" value="{{data.attributes.hair}}" placeholder="{{localize "kult4e.Hair"}}">
                    </p1>
                </div>
            </div>
        </div>
    </div>
    <div class="flex-container top-section">
        <div class="flex-column modifier-section">
            <div>
                {{localize "kult4e.Forward"}}:
                <select name="data.forward" value="{{data.forward}}">
                    {{#select data.forward}}
                        <option value="5">5</option>
                        <option value="4">4</option>
                        <option value="3">3</option>
                        <option value="2">2</option>
                        <option value="1">1</option>
                        <option value="0">0</option>
                        <option value="-1">-1</option>
                        <option value="-2">-2</option>
                        <option value="-3">-3</option>
                        <option value="-4">-4</option>
                        <option value="-5">-5</option>
                    {{/select}}
                </select>
            </div>
            <div class="situational-modifier">
                {{localize "kult4e.SitMod"}}:
                <select name="data.sitmod" value="{{data.sitmod}}">
                    {{#select data.sitmod}}
                        <option value="5">5</option>
                        <option value="4">4</option>
                        <option value="3">3</option>
                        <option value="2">2</option>
                        <option value="1">1</option>
                        <option value="0">0</option>
                        <option value="-1">-1</option>
