                    <tr>
                        <td>{{localize "kult4e.Reason"}}</td>
                        <td class="percpic">
                            <select class="foo" name="data.attributes.perception" value="{{data.attributes.perception}}">
                                {{#select data.attributes.perception}}
                                    <option value="5">&nbsp;5&nbsp;</option>
                                    <option value="4">&nbsp;4&nbsp;</option>
