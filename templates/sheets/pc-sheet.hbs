                        <option value="-4">-4</option>
                        <option value="-5">-5</option>
                    {{/select}}
                </select>
            </div>
        </div>
    </div>
    <div class="navigation-section">
        <a class="tabButton" data-tab="Stats">{{localize "kult4e.Stats"}}</a>
        <a class="tabButton" data-tab="Background">{{localize "kult4e.Background"}}</a>
    </div>
