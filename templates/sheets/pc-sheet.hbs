    <div id="Background" class="background-section {{actor._id}}-tab">
        <div class="two-column">
            <div "background-box">
                <div class="section-label">{{localize "kult4e.Background"}}</div>
                <div class="free-text">
                    {{editor content=data.biography target="data.biography" button=true owner=owner editable=editable}}
                </div>
            </div>
            <div>
                <div class="section-label">{{localize "kult4e.Appearance"}}</div>
                <div class="free-text">
                    {{editor content=data.appearance target="data.appearance" button=true owner=owner editable=editable}}
                </div>
            </div>
        </div>
</form>
