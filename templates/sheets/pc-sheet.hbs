<form class="{{cssClass}} kult-sheet" autocomplete="off">
    <header class="sheet-header">
        <script src="systems/kult-divinity-lost/scripts/delete.js"></script>
        <script src="systems/kult-divinity-lost/scripts/getAttribute.js"></script>
        <img src="/systems/kult-divinity-lost/assets/kultlogo.png" height="64" width="167">
        <h1 class="character-name"><input name="name" type="text" value="{{actor.name}}" placeholder="Name" /></h1>
    </header>
    <div class="flex-container">
        <div class="flex-column modifier-section">
            <img class="actor-picture" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="167" width="167" />
